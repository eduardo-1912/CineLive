<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignupActivity">

    <!-- Toolbar -->
    <include android:id="@+id/toolbar" layout="@layout/toolbar" />

    <!-- Container -->
    <LinearLayout style="@style/Container.Main">

        <!-- Título -->
        <TextView
            style="@style/Title"
            android:text="@string/editar_perfil_titulo" />

        <!-- Subtítulo -->
        <TextView
            style="@style/Subtitle"
            android:text="@string/editar_perfil_subtitulo" />

        <!-- Form Utilizador -->
        <include android:id="@+id/form" layout="@layout/layout_form_utilizador" />

        <!-- Botão Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:text="@string/btn_guardar"
            style="@style/Button.Primary.Full" />

        <!-- Botão Cancelar -->
        <Button
            android:id="@+id/btnCancelar"
            android:text="@string/btn_cancelar"
            style="@style/Button.Text" />

    </LinearLayout>

</LinearLayout>
