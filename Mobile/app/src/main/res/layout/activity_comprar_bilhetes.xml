<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ComprarBilhetesActivity">

    <!-- Toolbar -->
    <include android:id="@+id/toolbar" layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dados do filmes -->
            <LinearLayout style="@style/Container.Main">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/tvTitulo"
                        style="@style/Title.Bold"
                        android:textSize="28sp"
                        android:text="Interstellar"/>


                    <LinearLayout style="@style/HorizontalLayout">

                        <!-- Rating -->
                        <TextView
                            android:id="@+id/tvRating"
                            style="@style/Text"
                            android:text="M3"/>

                        <TextView style="@style/Text" android:text=" • " />

                        <!-- Duração -->
                        <TextView
                            android:id="@+id/tvDuracao"
                            style="@style/Text"
                            android:text="2h 32min"/>

                    </LinearLayout>

                </LinearLayout>

                <Space style="@style/VerticalSpace.16" />

                <LinearLayout style="@style/HorizontalLayout.Full">

                    <LinearLayout
                        style="@style/VerticalLayout"
                        android:layout_weight="1">

                        <!-- Cinema -->
                        <TextView style="@style/Label" android:text="@string/label_cinema" />
                        <TextView
                            android:id="@+id/tvNomeCinema"
                            style="@style/Text"
                            android:text="CineLive Leiria" />

                        <Space style="@style/VerticalSpace.16" />

                        <!-- Data Sessão -->
                        <TextView style="@style/Label" android:text="@string/label_data" />
                        <TextView
                            android:id="@+id/tvDataSessao"
                            style="@style/Text"
                            android:text="29/11/2025" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/VerticalLayout"
                        android:layout_weight="1">

                        <!-- Sala -->
                        <TextView style="@style/Label" android:text="@string/label_sala" />
                        <TextView
                            android:id="@+id/tvNomeSala"
                            style="@style/Text"
                            android:text="Sala 3" />

                        <Space style="@style/VerticalSpace.16" />

                        <!-- Horário Sessão -->
                        <TextView style="@style/Label" android:text="@string/label_horario" />
                        <TextView
                            android:id="@+id/tvHorario"
                            style="@style/Text"
                            android:text="10:00 - 12:00" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Escolha de lugares -->
            <LinearLayout style="@style/Container.Main">

                <LinearLayout
                    style="@style/HorizontalLayout.Full"
                    android:gravity="center">

                    <!-- Disponível -->
                    <LinearLayout style="@style/BadgeContainer">
                        <TextView
                            style="@style/BadgeText"
                            android:layout_weight="1"
                            android:text="@string/badge_disponivel" />
                    </LinearLayout>

                    <Space style="@style/HorizontalSpace.6" />

                    <!-- Selecionado -->
                    <LinearLayout style="@style/BadgeContainer">
                        <TextView
                            style="@style/BadgeText"
                            android:layout_weight="1"
                            android:text="@string/badge_selecionado" />
                    </LinearLayout>

                    <Space style="@style/HorizontalSpace.6" />

                    <!-- Ocupado -->
                    <LinearLayout style="@style/BadgeContainer">
                        <TextView
                            style="@style/BadgeText"
                            android:layout_weight="1"
                            android:text="@string/badge_ocupado" />
                    </LinearLayout>

                </LinearLayout>

                <Space style="@style/VerticalSpace.20" />

                <!-- Ecrã -->
                <TextView
                    style="@style/Label"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"
                    android:text="@string/label_ecra" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?attr/colorOnSurface"/>

                <Space style="@style/VerticalSpace.12" />

                <!-- Mapa de Lugares -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="horizontal">

                    <!-- Mapa de Lugares -->
                    <TableLayout
                        android:id="@+id/tableMapaLugares"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*" />

                </HorizontalScrollView>


                <Space style="@style/VerticalSpace.24" />

                <LinearLayout style="@style/HorizontalLayout.Full">

                    <LinearLayout android:layout_weight="0.35" style="@style/VerticalLayout">

                        <!-- Lugares -->
                        <TextView android:text="@string/label_lugares" style="@style/Label" />
                        <TextView
                            android:id="@+id/tvLugares"
                            style="@style/Text"
                            android:text="A5, A6, A7" />

                    </LinearLayout>

                    <LinearLayout android:layout_weight="0.65" style="@style/VerticalLayout">

                        <!-- Total -->
                        <TextView android:text="@string/label_total" style="@style/Label" android:textAlignment="textEnd"/>
                        <TextView
                            android:id="@+id/tvTotal"
                            style="@style/Text"
                            android:textAlignment="textEnd"
                            android:text="8.00€" />

                    </LinearLayout>

                </LinearLayout>

                <Space style="@style/VerticalSpace.4" />

                <!-- Botão Pagar -->
                <Button
                    android:id="@+id/btnPagar"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:backgroundTint="?attr/colorError"
                    android:text="@string/btn_pagar"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>