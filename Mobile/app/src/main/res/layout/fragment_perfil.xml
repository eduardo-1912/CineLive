<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".PerfilFragment">

    <LinearLayout style="@style/Container">

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            style="@style/TextInputLayoutDisabled"
            android:hint="@string/form_hint_username">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nome -->
        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            style="@style/TextInputLayoutDisabled"
            android:hint="@string/form_hint_nome">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNome"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            style="@style/TextInputLayoutDisabled"
            android:hint="@string/form_hint_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- TelemÃ³vel -->
        <com.google.android.material.textfield.TextInputLayout
            android:enabled="false"
            style="@style/TextInputLayoutDisabled"
            android:hint="@string/form_hint_telemovel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelemovel"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="9" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button style="@style/Button.Primary.Full"
                android:id="@+id/btnEditarPerfil"
                android:layout_weight="0.5"
                android:text="@string/btn_editar_perfil" />

            <Space android:layout_width="4dp" android:layout_height="match_parent" />

            <Button style="@style/Button.Secondary.Full"
                android:id="@+id/btnLogout"
                android:layout_weight="0.5"
                android:text="@string/btn_logout" />

        </LinearLayout>

        <Button style="@style/Button.Primary"
            android:id="@+id/btnEliminarConta"
            android:layout_width="match_parent"
            android:backgroundTint="?attr/colorError"
            android:text="@string/btn_eliminar_conta" />

    </LinearLayout>

</LinearLayout>