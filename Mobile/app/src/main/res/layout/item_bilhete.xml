<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Lugar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Label"
                android:text="@string/label_lugar"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tvLugar"
                style="@style/Value"
                android:textAlignment="textStart" />
        </LinearLayout>

        <!-- Preço -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Label"
                android:text="@string/label_preco"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPreco"
                style="@style/Value"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Estado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Label"
                android:text="@string/label_estado"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvEstado"
                style="@style/Value"
                android:textAlignment="textEnd" />
        </LinearLayout>

    </LinearLayout>

    <Space style="@style/Space_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:background="@drawable/codigo_bg_shape">

        <!-- Código -->
        <TextView
            android:id="@+id/tvCodigo"
            style="@style/Title"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
