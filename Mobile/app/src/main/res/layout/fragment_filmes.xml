<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/VerticalLayout.Full"
    tools:context=".fragments.FilmesFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh" style="@style/VerticalLayout.Full">

        <ViewFlipper android:id="@+id/viewFlipper" style="@style/VerticalLayout.Full">

            <!-- Loading -->
            <include android:id="@+id/loading" layout="@layout/layout_loading" />

            <!-- Error -->
            <include android:id="@+id/error" layout="@layout/layout_error" />

            <!-- Main -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout style="@style/VerticalLayout">

                    <!-- Filter toggle -->
                    <LinearLayout style="@style/Container.ForList">
                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnEmExibicao"
                                style="@style/Button.Toggle"
                                android:layout_weight="0.35"
                                android:text="@string/em_exibicao" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnKids"
                                style="@style/Button.Toggle"
                                android:layout_weight="0.3"
                                android:text="@string/kids" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnBrevemente"
                                style="@style/Button.Toggle"
                                android:layout_weight="0.35"
                                android:text="@string/brevemente" />
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                    </LinearLayout>

                    <Space style="@style/VerticalSpace.8" />

                    <!-- Filmes -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFilmes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:clipToPadding="false"
                        android:paddingHorizontal="18dp"
                        android:paddingBottom="@dimen/list_padding_bottom"
                        tools:listitem="@layout/item_filme" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </ViewFlipper>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>